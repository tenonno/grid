<!-- Template. index.html is generated by webpack at bulidtime -->

<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>
    <%= htmlWebpackPlugin.options.title %>
  </title>


  <style>
    body {
      margin: 0;
      padding: 0;
    }

    /*スクロールバー全体*/

    ::-webkit-scrollbar {
      width: 10px;
    }

    /*スクロールバーの軌道*/

    ::-webkit-scrollbar-track {
      /* box-shadow: inset 0 0 6px rgba(0, 0, 0, .1);*/
      background-color: 'pink'
    }

    /*スクロールバーの動く部分*/

    ::-webkit-scrollbar-thumb {
      background-color: #ccc;
    }
  </style>
</head>

<body>
  <div id="root"></div>
</body>

</html>