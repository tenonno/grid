{
  "name": "grid",
  "version": "0.0.0",
  "main": "app/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron app",
    "server": "node dev-server.js",
    "lint-css": "stylelint \"src/**/*.css\"",
    "lint-ts": "tslint \"src/**/*.ts?(x)\"",
    "lint": "npm run lint-css && npm run lint-ts",
    "test:watch": "npm run test -- --watch",
    "prepackage": "cross-env NODE_ENV=production webpack",
    "package": "npm run prepackage && build --dir",
    "build": "npm run prepackage && build --x64",
    "build-mac": "npm run prepackage && build --mac --x64",
    "build-win": "npm run prepackage && build --win --x64",
    "build-linux": "npm run prepackage && build --linux --x64",
    "archive-builds": "tar -zcf builds.tar.gz dist/"
  },
  "build": {
    "appId": "tenonno.grid",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    }
  },
  "directories": {
    "buildResources": "install-resources"
  },
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/expect": "^1.13.29",
    "@types/node": "^6.0.38",
    "@types/react-dom": "^0.14.16",
    "@types/react-redux": "^4.4.31",
    "awesome-typescript-loader": "3.0.0-beta.17",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^2.0.0",
    "css-loader": "^0.25.0",
    "devtron": "^1.3.0",
    "electron": "^1.3.4",
    "electron-builder": "^7.13.0",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "^2.0.1",
    "enzyme": "^2.4.1",
    "express": "^4.14.0",
    "html-webpack-plugin": "^2.22.0",
    "ignore-styles": "^5.0.1",
    "json-loader": "^0.5.4",
    "postcss-cssnext": "^2.8.0",
    "postcss-loader": "^0.13.0",
    "postcss-simple-vars": "^3.0.0",
    "react": "^15.6.2",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.6.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.4.0",
    "stylelint-config-standard": "^13.0.2",
    "ts-node": "^1.3.0",
    "tslint": "^3.14.0",
    "typescript": "^2.0.10",
    "webpack": "^1.15.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-fail-plugin": "^1.0.5",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-merge": "^0.14.1",
    "webpack-notifier": "^1.4.1"
  },
  "dependencies": {
    "@types/react": "^16.0.25",
    "@types/react-dnd": "^2.0.34",
    "babel-cli": "^6.26.0",
    "babel-preset-node6": "^11.0.0",
    "material-ui": "^1.0.0-beta.22",
    "material-ui-icons": "^1.0.0-beta.17",
    "react-dnd": "^2.5.4",
    "react-pixi": "^0.9.16",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2"
  }
}
